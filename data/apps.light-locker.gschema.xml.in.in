<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="light-locker">

  <schema id="apps.light-locker" path="/apps/light-locker/">

    <key name="lock-on-suspend" type="b">
      <default>@LOCK_ON_SUSPEND_DEFAULT@</default>
      <summary>Lock on suspend</summary>
      <description>Lock the screen when the computer is suspended.</description>
    </key>

    <key name="late-locking" type="b">
      <default>@LATE_LOCKING_DEFAULT@</default>
      <summary>Lock after screensaver ends</summary>
      <description>Lock after screensaver has ended.</description>
    </key>

    <key name="lock-after-screensaver" type="u">
      <range min="0" max="3600" />
      <default>5</default>
      <summary>Seconds after screensaver to lock</summary>
      <description>Lock the screen after the screensaver has been active for
      this number of seconds. If 0, locking after the screensaver is
      disabled.</description>
    </key>

    <key name="lock-on-lid" type="b">
      <default>@LOCK_ON_LID_DEFAULT@</default>
      <summary>Lock on lid close</summary>
      <description>Lock the screen when lid of the computer is closed.</description>
    </key>

    <key name="idle-hint" type="b">
      <default>false</default>
      <summary>Set idle hint during screensaver</summary>
      <description>Set the session idle hint while the screensaver is active.
      </description>
    </key>

    <key name="before-lock" type="s">
      <default>""</default>
      <summary>Script to run before locking the screen</summary>
      <description>Script to run before locking the screen.
      </description>
    </key>

    <key name="after-lock" type="s">
      <default>""</default>
      <summary>Script to run after unlocking the screen</summary>
      <description>Script to run after unlocking the screen.
      </description>
    </key>

  </schema>
</schemalist>
